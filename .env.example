# Privy credentials (required)
PRIVY_APP_ID=
PRIVY_APP_SECRET=

# JWT secret for session tokens (required, min 32 chars)
# Generate: openssl rand -base64 32
JWT_SECRET=

# Server port (optional, default: 3001)
PORT=3001

# Public URL (optional, for Origin header in production)
# If not set, defaults to http://localhost:3001
PUBLIC_URL=

# Allowed CORS origins (optional, comma-separated)
# Leave empty for CLI-only access (no browser CORS needed)
ALLOWED_ORIGINS=
