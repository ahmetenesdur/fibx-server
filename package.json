		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/node": "^22.0.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^17.3.0",
		"prettier": "^3.8.1",
		"tsx": "^4.19.0",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.55.0"
	}
